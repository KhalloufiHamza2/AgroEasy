{% form_theme form 'bootstrap_4_layout.html.twig' %}

{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
<div class="form-group row ">
    {{ form_label(form.nom, null, {'label_attr': {'class': 'col-sm-5 col-form-label'}}) }}
    <div class="col-sm-10">
        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.nom) }}
    </div>
</div>
<div class="form-group row" style="margin-top: 10px">
    {{ form_label(form.prix, null, {'label_attr': {'class': 'col-sm-5 col-form-label'}}) }}
    <div class="col-sm-10">
        {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.prix) }}
    </div>
</div>
<div class="form-group row" style="margin-top: 10px">
    {{ form_label(form.description, null, {'label_attr': {'class': 'col-sm-5 col-form-label'}}) }}
    <div class="col-sm-10">
        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.description) }}
    </div>
</div>
<div class="form-group row" style="margin-top: 10px">
    <label for="{{ form.status.vars.id }}" class="col-sm-5 col-form-label">{{ form.status.vars.label }}</label>
    <div class="col-sm-10">
        {{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.status) }}
    </div>
</div>
<div class="form-group row" style="margin-top: 10px">
    {{ form_label(form.categorie, null, {'label_attr': {'class': 'col-sm-5 col-form-label'}}) }}
    <div class="col-sm-10">
        {{ form_widget(form.categorie, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.categorie) }}
    </div>
</div>
<button type="submit" class="btn btn-success offset-sm-5" style="margin-top: 10px;">Submit</button>
{{ form_end(form) }}