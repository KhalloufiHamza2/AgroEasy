{% extends 'base.html.twig' %}

{% block body %}
<div class="container my-2" >

<h1 class="mb-2" style="
      display: flex;
      flex-direction: column;
      align-items: center;
      min-height: 100%;">Produit {{ produit.id }}</h1>
    <div class="card mb-2">
        <div class="card-body">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ produit.status ? 'disponnible' : 'non_disponnible' }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ produit.categorie }}</td>
            </tr>
        </tbody>
    </table>
        </div>
    </div>

    <div class="my-2" style="
      display: flex;
      flex-direction: column;
      align-items: center;
      min-height: 100%;">

    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn btn-dark" style="margin-bottom: 5px">Modifier</a>
    {{ include('produit/_delete_form.html.twig') }}
        <a href="{{ path('app_produit_index') }}" class="btn btn-secondary" style="margin-top: 5px">Retour</a>
    </div>
{% endblock %}