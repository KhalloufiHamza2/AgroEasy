{% extends 'base.html.twig' %}

{% block title %}Culture index{% endblock %}


{% block body %}
    <main style="
            text-align: center;">
 <div class="container">
    <h1>Culture index</h1>
    <div class="card">
            <div class="card-header">
                <a class="btn btn-outline-primary" href="{{ path('app_culture_new') }} "> 
                    une nouvelle culture
                </a>
            </div>
            <div class="card-body">
          
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>date_plantation</th>
                <th>Quantit√©</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for c in culture %}
            <tr>
                <td>{{ c.id }}</td>
                <td>{{ c.type }}</td>
                <td>{{ c.datePlanting ? culture.datePlanting|date('Y-m-d') : '' }}</td>
                <td>{{ c.quantite }}</td>
                <td>
                    <a class="btn btn-outline-info" href="{{ path('app_culture_show', {'id': c.id}) }}">afficher</a>
                    <a class="btn btn-outline-success" href="{{ path('app_culture_edit', {'id': c.id}) }}">modifier</a>
                      <a class="btn btn-outline-success" href="{{ path('app_culture_delete', {'id': c.id}) }}">supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
   {{ knp_pagination_render(culture) }}
     
</div>
    
</div>

    
{% endblock %}
