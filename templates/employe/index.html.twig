{% extends 'base.html.twig' %}

{% block title %}Employe index{% endblock %}

{% block body %}
 <main style="
            position: fixed;
           
            left: 400px;
            bottom: 250px;
            width: 60%;
            height: 300px;
            text-align: center;">
    <h1>Liste des employ√©es </h1>
<div class="card">
            <div class="card-header">
                <a class="btn btn-outline-primary" href="{{ path('app_employe_new') }} "> 
                    un nouvel employe
                </a>
            </div>
            <div class="card-body">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Cin</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for employe in employes %}
            <tr>
                <td>{{ employe.id }}</td>
                <td>{{ employe.nom }}</td>
                <td>{{ employe.prenom }}</td>
                <td>{{ employe.cin }}</td>
                <td>
                    <a class="btn btn-outline-primary" href="{{ path('app_employe_show', {'id': employe.id}) }}">show</a>
                    <a  class="btn btn-outline-primary" href="{{ path('app_employe_edit', {'id': employe.id}) }}">edit</a>
                    <a  class="btn btn-outline-primary" href="{{ path('app_employe_delete', {'id': employe.id}) }}">delete</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-outline-success" href="{{ path('app_employe_new') }}">Create new</a>
{% endblock %}
